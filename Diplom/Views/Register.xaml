<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Views.Register"
             xmlns:vm="clr-namespace:Diplom.ViewModels"
             x:DataType="vm:RegisterViewModel"
             Title="Register">
    <VerticalStackLayout>
        <Entry Placeholder="Имя" Text="{Binding FirstName}"/>
        <Entry Placeholder="Фамилия" Text="{Binding LastName}"/>
        <Entry Placeholder= "Отчество" Text="{Binding Patronymic}"/>
        <DatePicker />
        <Entry Placeholder="Логин" Text="{Binding UserName}"/>
        <Entry Placeholder="Пароль" Text="{Binding Password}" IsPassword="True" />

    </VerticalStackLayout>
</ContentPage>