<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Views.Article"
             Title="Article">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <Editor IsReadOnly="True" Text="{Binding FirstTextPerson, Mode=OneWay}"/>
                <Image Source="{Binding ImageSource, Mode=OneWay}"/>
                <Editor IsReadOnly="True" Text="{Binding SecondTextPerson, Mode=OneWay}"/>
            </StackLayout>
        </ScrollView>
        <Button Grid.Row="1" Clicked="Button_Clicked"/>
    </Grid>
</ContentPage>