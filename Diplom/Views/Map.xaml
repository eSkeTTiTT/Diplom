<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Diplom.ViewModels"
             x:Class="Diplom.Views.Map"
             x:DataType="vm:MapViewModel"
             Title="Map">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <WebView
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Source="{Binding RouteUrl, Mode=OneWay}"
            />
        <Button
            Clicked="Map_Back_To_Choose"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Назад"
            />
    </Grid>
</ContentPage>